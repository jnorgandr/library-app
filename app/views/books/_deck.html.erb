<div class="row mb-4">
    <div class="col-md-12">
        <div class="card-deck">
        <% @books.each do |book| %>
        <div class="card">
            <div class="card-body card-bg">
            <h5><%= link_to book.title, book, class:"card-title book-title" %></h5>
            <p class="card-title"><strong>Autor:</strong> <%= book.author %></p>
            <p class="card-title"><strong>Estado:</strong> <%= book.status %></p>
            <p class="card-text"><strong>Prestado a:</strong> <%= book.lend_to %></p>
            <%= link_to 'Editar', edit_book_path(book), class: 'btn btn-primary' %>
            <%= link_to 'Eliminar', book, class: 'btn btn-primary', method: :delete, data: { confirm: 'Â¿Estas segura?' } %>
            </div>
            <div class="card-footer">
            <small class="text-muted"><strong>Prestado el:</strong> <%= book.created_at %></small>
            </div>
            <% if book.status == 'en estante' %>
                <div class="card-footer">
                <small class="text-muted"><strong>Entregado el:</strong> <%= book.updated_at %></small>
                </div>
            <% else %>
                <div class="card-footer">
                <small class="text-muted"><strong>Entregado el:</strong></small>
                </div>
            <% end %>
        </div>
        <% end %>
        </div>
    </div>
</div>